public class VigenereCipher {
    public static void main(String[] args) {
        String key = "ALBINA";
        String originalmessage = "KILL THE PERSON A";
        String encryption = encrypt(originalmessage, key);
        System.out.println("Key word is:"+key);
        System.out.println("The original message is:"+originalmessage);
        System.out.println(encryption);
        System.out.println(decryption(encryption, key));
    }

    static String encrypt(String text, final String key) {
        String result = "Encryption text is : ";
        text = text.toUpperCase();
        for (int i = 0, j = 0; i < text.length(); i++) {
            char a = text.charAt(i);
            if (a < 'A' || a > 'Z') continue;
            result += (char)((a + key.charAt(j) - 2 * 'A') % 26 + 'A');
            j = ++j % key.length();
        }
        return result;
    }

    static String decryption(String text, final String key) {
        String result = "Dectryption text is : ";
        text = text.toUpperCase();
        for (int i = 0, j = 0; i < text.length(); i++) {
            char a = text.charAt(i);
            if (a < 'A' || a > 'Z') continue;
            result += (char)((a - key.charAt(j) + 26) % 26 + 'A');
            j = ++j % key.length();
        }
        return result;
    }
}
